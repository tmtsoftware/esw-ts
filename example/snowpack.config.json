{
  "devOptions": {
    "port": 3000,
    "bundle": false,
    "open": "none"
  },
  "buildOptions": {
    "clean": true,
    "sourceMaps": false
  },
  "mount": {
    "public": "/",
    "src": "/_dist_"
  },
  "plugins": [
    ["@snowpack/plugin-typescript"]
  ],
  "env":{
    "APP_FOLDER": "example"
  },
  "alias": {
    "io-ts/lib": "io-ts/es6"    
  }
}
